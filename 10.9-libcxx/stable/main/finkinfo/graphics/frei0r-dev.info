PatchScript: <<
	# don't require opencv
	perl -pi -e 's|PKG_CHECK_MODULES\(OPENCV|#$&|g' configure.ac
	# Use correct file names (fixed upstream)
	autoreconf -vfi
<<
InstallScript: <<
	fink-package-precedence --prohibit-bdep frei0r-dev .	
	make install DESTDIR=%d
<<
