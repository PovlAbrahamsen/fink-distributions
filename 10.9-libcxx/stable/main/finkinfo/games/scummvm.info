PatchScript: <<
	# sdl detection assumes v2.0.x, so fix for our current
	perl -pi -e 's|2\.0\.\*|2.*.*|g' configure
	# don't detect MacPorts or homebrew
	perl -pi -e 's|port version|port-not-found version|g' configure
	perl -pi -e 's|brew -v|brew-not-found -v|g' configure
	# Fix our prefix
	perl -pi -e 's|/sw|%p|g' configure
	# don't use pandoc (needs v >= 2.0 for gfm) even if found
	perl -pi -e 's|USE_PANDOC|DONT_USE_PANDOC|g' Makefile.common
<<
GCC: 4.0
SetCFLAGS: -MD
SetCXXFLAGS: -I%p/lib/fluidsynth1/include
SetLDFLAGS: -L%p/lib/fluidsynth1/lib
ConfigureParams: <<
	--mandir=%p/share/man \
	--enable-release \
	--disable-seq-midi \
	--disable-timidity \
	--disable-updates \
	--enable-verbose-build \
	--disable-alsa \
	--disable-tremor \
	--enable-mpeg2 \
	--disable-sparkle \
	--disable-libunity \
	--disable-sndio \
	--enable-sdlnet \
	--enable-libcurl \
	--disable-gtk \
	--enable-text-console \
	--opengl-mode=auto
<<
CompileScript: <<
	#!/bin/sh -ev
	%{default_script}
	fink-package-precedence --depfile-ext='\.d' .
<<
InstallScript: <<
	#perl -pi -e "s,-c -s -m 644,-c -m 644," ports.mk
	make install DESTDIR=%d
<<
