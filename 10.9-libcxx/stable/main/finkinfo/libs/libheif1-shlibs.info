Package: libheif1-shlibs
Version: 1.12.0
Revision: 1
Source: https://github.com/strukturag/libheif/releases/download/v%v/libheif-%v.tar.gz
Source-Checksum: SHA256(e1ac2abb354fdc8ccdca71363ebad7503ad731c84022cf460837f0839e171718)
# https://github.com/fink/fink-distributions/issues/974
PatchFile: %n-catch-update.patch
PatchFile-MD5: 6241cb9aa0e6c60533c85f120da65c6b
BuildDepends: <<
	fink-package-precedence,
	pkgconfig,
	libde265.0-dev,
	libjpeg9,
	libpng16,
	libx265.79-dev
<<
Depends: <<
	libde265.0-shlibs,
	libx265.79-shlibs
<<
GCC: 4.0
PatchScript: <<
	%{default_script}

	perl -pi -e 's/(-version-info)/-no-undefined \1/' libheif/Makefile.in
	perl -pi -e 's,("dav1d)(\\?"),\1 >= 99999.FORCE.NONDETECT\2,' configure
	# Remove non-public-API IBD
	perl -ni -e 'print unless /Requires.private:/' libheif.pc.in
<<
# gdk-pixbuf module FTBFS (rpath bug)
# fink doesn't have libaom, librav1e, libdav1d
# ./configure doesn't have a flag to disable dav1d
ConfigureParams: <<
	--disable-static \
	--enable-tests \
	--enable-examples \
	--enable-go \
	--disable-gdk-pixbuf \
	--disable-aom \
	--disable-rav1e
<<
CompileScript: <<
	%{default_script}
	fink-package-precedence --prohibit-bdep=libheif1-dev .
<<
InfoTest: <<
	TestScript: make -C tests test-local || exit 2
<<
DocFiles: COPYING README.md 
Shlibs: %p/lib/libheif.1.dylib 14.0.0 %n (>= 1.12.0-1)
SplitOff: <<
	Package: libheif1-dev
	Depends: %N (= %v-%r)
	BuildDependsOnly: true
	Files: <<
		include
		lib/pkgconfig
		lib/libheif.{dylib,la}
	<<
	DocFiles: COPYING README.md 
<<
SplitOff2: <<
	Package: heif-bin
	Depends: <<
		%N (>= %v-%r),
		libde265.0-shlibs,
		libpng16-shlibs,
		libjpeg9-shlibs,
		libx265.79-shlibs
	<<
	Files: <<
		bin
		share/man
		share/thumbnailers
	<<
	DocFiles: COPYING README.md 
<<
