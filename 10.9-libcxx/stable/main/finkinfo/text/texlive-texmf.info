if [ -x %p/bin/mktexlsr ]
then
	%p/bin/mktexlsr %p/share/texmf-dist
else
 # overwrite ls-R
 echo "%% ls-R -- filename database for kpathsea; do not change this line." > %p/share/texmf-dist/ls-R
 echo "./:" >> %p/share/texmf-dist/ls-R
 ( cd %p/share/texmf-dist ; /bin/ls -1R ) >> %p/share/texmf-dist/ls-R
fi

 echo "Adjusting permissions ..."
 chmod -R a+rX %p/share/texmf-dist
<<
DescPackaging: <<
We split the original texlive-20170524-texmf.tar.xz into two tarballs:
texlive-20170524-texmf-delpdf.tar.xz and texlive-20170524-texmf-doc.tar.xz,
which were made by the following script:

###############
#!/bin/bash -ev
 wget ftp://tug.org/texlive/historic/2017/texlive-20170524-texmf.tar.xz
 xz -dc texlive-20170524-texmf.tar.xz | tar xf -

 for file in `find texlive-20170524-texmf/texmf-dist/doc -type f -name '*.pdf'`
 do
     mkdir -p tmp/${file%/*}
     mv $file tmp/$file
 done

 mkdir                                      texlive-20170524-texmf-doc
 mv  tmp/texlive-20170524-texmf/texmf-dist  texlive-20170524-texmf-doc/
 tar cf texlive-20170524-texmf-doc.tar      texlive-20170524-texmf-doc
 xz  -9 texlive-20170524-texmf-doc.tar

 mv     texlive-20170524-texmf              texlive-20170524-texmf-delpdf
 tar cf texlive-20170524-texmf-delpdf.tar   texlive-20170524-texmf-delpdf
 xz  -9 texlive-20170524-texmf-delpdf.tar
###############
<<
