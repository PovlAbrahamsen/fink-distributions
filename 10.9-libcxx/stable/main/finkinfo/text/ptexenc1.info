Package: ptexenc1
Version: 1.3.5
Revision: 1
Description: Kanji code convert library for pTeX
BuildDepends: <<
	fink (>= 0.32),
	fink-package-precedence,
	libiconv-dev,
	libkpathsea6 (>= 6.2.3-1),
	texlive-texmf,
	pkgconfig
<<
BuildDependsOnly: true
Depends: %N-shlibs (= %v-%r)
Conflicts: ptexenc
Replaces:  ptexenc
Source: ftp://tug.org/texlive/historic/2017/texlive-20170524-source.tar.xz
Source-Checksum: SHA256(0161695304e941334dc0b3b5dabcf8edf46c09b7bc33eea8229b5ead7ccfb2aa)
TarFilesRename: texlive-20170524-source:texlive
NoSourceDirectory: true
PatchScript: <<
 sed -i.bak -e 's|\(-version-info\)|$(KPATHSEA_LIBS) $(LIBS) \1|' \
            -e '/unicode-jp.h/d' \
            -e 's|\(ptexenc/unicode.h\)|\1 ptexenc/unicode-jp.h|g' \  
                                     texlive/texk/ptexenc/Makefile.in
<<
ConfigureParams: <<
 --enable-shared \
 --datadir='${prefix}/share' \
 --infodir='${prefix}/share/info' \
 --mandir='${prefix}/share/man' \
 --with-system-kpathsea \
 --enable-kanji-iconv \
 --enable-dependency-tracking
<<
CompileScript: <<
 #!/bin/sh -ev
 cd texlive/texk/ptexenc
 %{default_script}
 fink-package-precedence .
<<
InstallScript: <<
 cd texlive/texk/ptexenc; make install-strip DESTDIR=%d
<<
DocFiles: texlive/texk/ptexenc/{COPYRIGHT,ChangeLog,README}
SplitOff: <<
 Package: %N-shlibs
 Description: Shared libs of Kanji code convertor for pTeX
 Depends: libkpathsea6-shlibs (>= 6.2.3-1), libiconv
 Files: lib/libptexenc.*.dylib
 Shlibs: %p/lib/libptexenc.1.dylib 5.0.0 %n (>= 1.3.2-1)
 DocFiles: texlive/texk/ptexenc/{COPYRIGHT,ChangeLog,README}
<<
