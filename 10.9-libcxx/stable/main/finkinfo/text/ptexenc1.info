Package: ptexenc1
Version: 1.4.3
Revision: 1
Description: Kanji code convert library for pTeX
BuildDepends: <<
	fink (>= 0.32),
	fink-package-precedence,
	libiconv-dev,
	libkpathsea6 (>= 6.3.5-1),
	pkgconfig,
	texlive-texmf
<<
BuildDependsOnly: true
Depends: %N-shlibs (= %v-%r)
Conflicts: ptexenc
Replaces:  ptexenc
Source: ftp://tug.org/texlive/historic/2023/texlive-20230313-source.tar.xz
#Source: mirror:ctan:texlive/historic/%v/texlive-20230313-source.tar.xz
Source-Checksum: SHA256(3878aa0e1ed0301c053b0e2ee4e9ad999c441345f4882e79bdd1c8f4ce9e79b9)
TarFilesRename: texlive-20230313-source:texlive
NoSourceDirectory: true
PatchScript: <<
 sed -i.bak -e 's|\(-version-info\)|$(KPATHSEA_LIBS) $(LIBS) \1|' \
            -e '/unicode-jp.h/d' \
            -e 's|\(ptexenc/unicode.h\)|\1 ptexenc/unicode-jp.h|g' \  
                                     texlive/texk/ptexenc/Makefile.in
<<
ConfigureParams: <<
 --enable-shared \
 --datadir='${prefix}/share' \
 --infodir='${prefix}/share/info' \
 --mandir='${prefix}/share/man' \
 --with-system-kpathsea \
 --with-kpathsea-includes=%p/include \
 --with-kpathsea-libdir=%p/lib \
 --enable-kanji-iconv \
 --enable-dependency-tracking
<<
CompileScript: <<
 #!/bin/sh -ev
 cd texlive/texk/ptexenc
 %{default_script}
 fink-package-precedence --prohibit-bdep=%N .
<<
InstallScript: <<
 cd texlive/texk/ptexenc; make install-strip DESTDIR=%d
<<
DocFiles: texlive/texk/ptexenc/{COPYRIGHT,ChangeLog,README}
SplitOff: <<
 Package: %N-shlibs
 Description: Shared libs of Kanji code convertor for pTeX
 Depends: libkpathsea6-shlibs (>= 6.3.5-1), libiconv
 Files: lib/libptexenc.*.dylib
 Shlibs: %p/lib/libptexenc.1.dylib 6.0.0 %n (>= 1.4.3-1)
 DocFiles: texlive/texk/ptexenc/{COPYRIGHT,ChangeLog,README}
<<
